{
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 120,
    "trailingComma": "all",
    "bracketSameLine": true,
    "overrides": [
        {
            "files": ["*.js", "*.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["tsconfig.json"],
            "options": {
                "parser": "json5",
                "quoteProps": "preserve"
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "plugins": ["@shopify/prettier-plugin-liquid"],
                "parser": "liquid-html",
                "tabWidth": 2,
                "htmlWhitespaceSensitivity": "ignore"
            }
        }
    ]
}
